<mvc:View controllerName="ER.zfercarpo.controller.Main"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:t="sap.ui.table"
          xmlns="sap.m"
          xmlns:f="sap.f"
          xmlns:viz="sap.viz.ui5.controls"
          xmlns:layout="sap.ui.layout"
          xmlns:fb="sap.ui.comp.filterbar"
          xmlns:core="sap.ui.core"
          xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
          xmlns:viz.data="sap.viz.ui5.data">
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="EReON 지점별 차량 구매 오더 이력 차트" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <fb:FilterBar id="idFilterBar" header="Search Filters" useToolbar="false"
                    search="onSearch" filterContainerWidth="10rem">
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem groupName="__$INTERNAL$" name="branch" label="지점ID"
                            visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox
                                    id="idComboBox"
                                    items="{
                                        path: 'branchList>/list',
                                        templateShareable: true
                                    }"
                                    showSecondaryValues="true" 
                                    >       
                                    <core:ListItem
                                        key="{branchList>branch}"
                                        text="{branchList>branch}"
                                        additionalText="{branchList>branchname}"
                                        />
                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <viz:VizFrame 
                id="idVizFrame" 
                uiConfig="{applicationSet:'fiori'}"
                height='100%' 
                width="100%" 
                vizType='bar'
                selectData="onChartSelectData">
                <viz:dataset>
                    <viz.data:FlattenedDataset id="idFlattendDataset" data="{/ZSER_CARPO_CTYIDSet}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Branch" value="{Branch}" />
                            <viz.data:DimensionDefinition name="Ctyid" value="{Ctyid}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="UnitPrice" value="{Price}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="Branch,Ctyid" />                
                    <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Price" />
                </viz:feeds>
            </viz:VizFrame>
        </f:content>
    </f:DynamicPage>
</mvc:View>